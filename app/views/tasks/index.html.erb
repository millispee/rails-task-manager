<h1>My Tasks</h1>
<ul >
  <% @tasks.each do |task| %>
  <li>
    <div>
    <% if task.completed %>
      <p>[x] <%= link_to task.title, task_path(task) %>
        <%= link_to "delete", task_path(task), method: :delete, data: {confirm: "Are you shure?"}  %>
      </p>
    <% else %>
      <p>[ ] <%= link_to task.title, task_path(task) %>
        <%= link_to "delete", task_path(task), method: :delete, data: {confirm: "Are you shure?"}  %>
      </p>
    <% end %>
    </div>
    <div>

    </div>
  </li>
  <% end %>
</ul>

<%= link_to "Create a task", new_task_path(@task)  %>

